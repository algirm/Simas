<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomor_surat"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/nomor_et"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:enabled="false"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/kepada_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kepada"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/etKepada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="3"
            android:enabled="false"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="5dp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal_surat"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/etTanggalSurat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:enabled="false"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perihal"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/etPerihal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="3"
            android:enabled="false"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="5dp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diajukan_kepada"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/etDiajukanKepada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="3"
            android:enabled="false"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="5dp"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pdfContainer"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loading_container"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <androidx.core.widget.ContentLoadingProgressBar
                    android:layout_gravity="center"
                    android:id="@+id/pdfDialog_progress_bar"
                    style="?android:attr/progressBarStyle"
                    android:layout_margin="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading_tv"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="12sp"
                    android:visibility="visible"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_unggah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unggah_file_pdf_maks_25_mb"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filename_tv"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textSize="12sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_pilihFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/pilih_file"
            android:backgroundTint="@color/ambient4"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>