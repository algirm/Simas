<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tambah_arsip_masuk_scrollview"
    tools:context=".ui.operator.suratmasuk.TambahArsipMasukFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kategori"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box_light"
            android:layout_marginHorizontal="7dp"
            android:paddingVertical="5dp"
            android:layout_marginBottom="15dp">

            <Spinner
                android:id="@+id/kategori_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perincian"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_box_light"
            android:layout_marginHorizontal="7dp"
            android:paddingVertical="5dp"
            android:layout_marginBottom="15dp">

            <Spinner
                android:id="@+id/perincian_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nomor_surat"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/nomor_et"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/kepada_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tujuan"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/tujuan_et"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dari"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:id="@+id/dari_et"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tanggal_surat"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/tanggal_et"
            android:hint="@string/dd_mm_yyyy"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/perihal"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:id="@+id/perihal_et"
            android:paddingBottom="5dp"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lampiran"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:id="@+id/lampiran_et"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:background="@drawable/text_box_light"
            tools:ignore="Autofill,LabelFor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_tembusan"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tembusan_tv"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tembusan"
                android:textStyle="bold"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="4dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/pilih_semua_tembusan_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tembusan_tv"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/pilih_semua_tembusan_checkbox"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <TextView
                    android:id="@+id/header_text_item_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="@string/pilih_semua"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tembusan_rcv"
                android:layout_below="@id/pilih_semua_tembusan_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unggah_file_pdf_maks_25_mb"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filename_tv"
            android:textStyle="bold"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
            android:textSize="12sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_tampil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/tampil"
            android:backgroundTint="@color/ambient4"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_pilihFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginHorizontal="7dp"
            android:layout_marginBottom="7dp"
            android:text="@string/pilih_file"
            android:backgroundTint="@color/ambient4"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_gravity="center"
            android:id="@+id/tambah_progress_bar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="7dp"
            android:text="@string/simpan"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>